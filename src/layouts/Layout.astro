---
import "/src/styles/global.css";
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main
      class="flex flex-col items-center justify-center h-full bg-gray-100 xl:pt-0 pt-5 w-full dark:bg-gray-800 dark:text-gray-200"
    >
      <slot />
    </main>
  </body>
</html>

<style>
  body {
    @apply grid place-items-center h-screen;
  }
</style>
